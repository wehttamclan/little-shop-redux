<header id='header'>
  <p id='merchant-show-name'>Invoice: <%= @invoice.id %> - <%= @invoice.status.capitalize %> - $<%= (@invoice.total_price)/100.0 %></p>
  <p id='create-merchant' >
    <div class='item-buttons'>
      <form action='/invoices/<%= @invoice.id %>/edit' method="get">
        <input id='edit-item-button' type="submit" value="Edit">
      </form>
      <form class="delete-<%= @invoice.id %>" action='/invoices/<%= @invoice.id %>' method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete">
      </form>
    </p>
  </header>
<a href='/merchants/<%= @invoice.merchant_id %>'><%= @invoice.merchant.name %></a>
<% @invoice.invoice_items.each do |ii| %>
<ul id="invoice-<%= @invoice.id %>">
  <li> <%= ii.quantity %></li>
  <li> <%= ii.unit_price %></li>
</ul>
<% end %>
