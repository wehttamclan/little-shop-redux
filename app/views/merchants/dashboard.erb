<header id='header'>
  <p id='edit-merchant-logo'>Merchants Dashboard</p>
</header>

<section>
  <div class="most-items">
    <p id='merchant-with-most-items'>Merchant With Most Items: <%= @merchant_with_most_items.name %></p>
  </div>
  <div class="highest-item">
    <p id='merchant-with-highest-priced-item'>Merchant With Highest Priced Item: <%= @merchant_name_with_highest_priced_item %></p>
  </div>
</section>

<section class='merchant-dashboard-boxes-container'>
  <div class="merchant-dashboard-boxes">
    <% @merchants.each do |merchant| %>
    <ul class='merchant-dashboard-box'>
      <a href='/merchants/<%= merchant.id %>' id='<%= merchant.name %>'><%= merchant.name %>/></a>
      <li id='item-count-<%= merchant.id %>'>Item Count:</br><%= merchant.items.length %>/>
      <li id='average-price-<%= merchant.id %>'>Average Item Price:</br>$<%= '%.2f' % merchant.avg_item_price %>/>
      <li id='total-cost-<%= merchant.id %>'>Total Cost of Items:</br>$<%= '%.2f' % merchant.total_cost_of_items %>/>
    </ul>
  <% end %>
  </div>
</section>
