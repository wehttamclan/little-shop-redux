<header id='header'>
  <p id='merchant-show-name'><%= @item.title %></p>
  <p id='create-merchant' >
    <div class='item-buttons'>
      <form action='/items/<%= @item.id %>/edit' method="get">
        <input id='edit-item-button' type="submit" value="Edit">
      </form>
      <form class="delete-<%= @item.id %>" action='/items/<%= @item.id %>' method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete">
      </form>
    </p>
  </header>
  <section class='item-show-container'>
    <div class="item-show-left">
      <h1><%= @items_merchant.name %></h1>
      <img class='tulip-image' src='/tulips.jpg' alt="yellow-tulip"/>
    </div>
    <div class="item-show-right">
      <h1><%= @item.title %></h1>
      <h1><%= @item.price %></h1>
      <h1><%= @item.description %></h1>
    </div>
  </section>
