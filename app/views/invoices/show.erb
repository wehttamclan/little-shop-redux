<h1><%= @invoice.merchant_id %></h1>
<h1><%= @invoice.status %></h1>
<a href="/invoices/<%= @invoice.id %>/edit"><button>Edit</button></a>
<div class="delete-<%= @invoice.id %>">
  <form action='/invoices/<%= @invoice.id %>' method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>
</div>

<% @invoice.invoice_items.each do |ii| %>
<ul id="invoice-<%= @invoice.id %>">
  <li> <%= ii.quantity %></li>
  <li> <%= ii.unit_price %></li>
</ul>
<% end %>
